# Lambda Labs API Key (required)
# Get yours at: https://cloud.lambda.ai/api-keys
LAMBDA_API_KEY=your_api_key_here

# Path to custom init script (run on new machines via SSH)
# Leave empty to skip initialization
INIT_SCRIPT_PATH=./init_machine.sh

# Idle shutdown: hours of 0% GPU utilization before terminating
IDLE_SHUTDOWN_HOURS=2

# Backup settings
BACKUP_DIR=./backup
BACKUP_EXCLUDE_PATTERNS=.*,wandb,*.pyc,__pycache__
BACKUP_MAX_FILE_SIZE_MB=100

# SSH config path (will be updated with Lambda instances)
SSH_CONFIG_PATH=~/.ssh/config

# SSH user for Lambda instances (default: ubuntu)
SSH_USER=ubuntu

# SSH key path for connecting to instances
SSH_KEY_PATH=~/.ssh/id_rsa
