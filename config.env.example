# Lambda Labs API Key (required)
# Get yours at: https://cloud.lambda.ai/api-keys
LAMBDA_API_KEY=your_api_key_here

# Path to custom init script (run on new machines via SSH)
# Leave empty to skip initialization
INIT_SCRIPT_PATH=./init_machine.sh

# Termination policy (both conditions must be met):
# - MIN_RUNTIME_HOURS: machine must have been running for at least this long
# - IDLE_SHUTDOWN_HOURS: machine must have been idle (0% GPU) for this long
MIN_RUNTIME_HOURS=4
IDLE_SHUTDOWN_HOURS=2

# Backup settings
BACKUP_DIR=./backup
BACKUP_EXCLUDE_PATTERNS=.*,wandb,*.pyc,__pycache__
BACKUP_MAX_FILE_SIZE_MB=100

# SSH config path (will be updated with Lambda instances)
SSH_CONFIG_PATH=~/.ssh/config

# SSH user for Lambda instances (default: ubuntu)
SSH_USER=ubuntu

# Directory containing SSH keys (named after Lambda key names)
# Supports two structures:
#   ./keys/nicky-test           (direct file)
#   ./keys/nicky-test/nicky-test.pem  (subfolder)
SSH_KEYS_DIR=./keys

# Default SSH key (fallback if specific key not found)
SSH_KEY_DEFAULT=~/.ssh/id_rsa
